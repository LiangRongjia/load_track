<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity">

    <TextView
        android:id="@+id/login_registe"
        android:layout_width="117dp"
        android:layout_height="64dp"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="注册"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.example.myapplication.FontIconView
        android:id="@+id/fontIconView"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/userbtn"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/user_id"
        app:layout_constraintTop_toTopOf="@+id/user_id" />

    <EditText
        android:id="@+id/user_id"
        android:layout_width="193dp"
        android:layout_height="57dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:hint="用户名"
        android:maxLength="8"
        android:inputType="text"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
>
    <com.example.myapplication.FontIconView
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:text="@string/phone"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/phoneNum"
        app:layout_constraintTop_toTopOf="@+id/phoneNum" />

    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="193dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:inputType="phone"
        android:hint="请输入电话号码"
        app:layout_constraintStart_toStartOf="@+id/user_id"
        app:layout_constraintTop_toBottomOf="@+id/user_id" />

    <EditText
        android:id="@+id/verif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:hint="验证码"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/phoneNum"
        app:layout_constraintTop_toBottomOf="@+id/phoneNum" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:hint="获取验证码"
        android:onClick="getVerificationCode"
        app:layout_constraintStart_toEndOf="@+id/verif"
        app:layout_constraintTop_toTopOf="@+id/verif" />

    <com.example.myapplication.FontIconView
        android:id="@+id/fontIconView2"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:text="@string/passedbtn"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/passwd1"
        app:layout_constraintTop_toTopOf="@+id/passwd1" />

    <EditText
        android:id="@+id/passwd1"
        android:layout_width="193dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:singleLine="true"
        android:gravity="center"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="16"
        app:layout_constraintStart_toStartOf="@+id/phoneNum"
        app:layout_constraintTop_toBottomOf="@+id/verif" />

    <com.example.myapplication.FontIconView
        android:id="@+id/fontIconView3"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:text="@string/passedbtn"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/passwd2"
        app:layout_constraintTop_toTopOf="@+id/passwd2"></com.example.myapplication.FontIconView>

    <EditText
        android:id="@+id/passwd2"
        android:layout_width="193dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:singleLine="true"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:maxLength="16"
        app:layout_constraintStart_toStartOf="@+id/passwd1"
        app:layout_constraintTop_toBottomOf="@+id/passwd1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:onClick="register"
        android:text="注册"
        app:layout_constraintStart_toStartOf="@+id/passwd2"
        app:layout_constraintTop_toBottomOf="@+id/passwd2" />

</androidx.constraintlayout.widget.ConstraintLayout>