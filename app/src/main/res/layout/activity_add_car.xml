<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddCarActivity">

    <EditText
        android:id="@+id/textCarid"
        android:hint="车牌号"
        android:gravity="center"
        android:layout_width="208dp"
        android:layout_height="80dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textCarstr"
        android:layout_width="211dp"
        android:layout_height="77dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:hint="车辆信息"
        app:layout_constraintStart_toStartOf="@+id/textCarid"
        app:layout_constraintTop_toBottomOf="@+id/textCarid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="64dp"
        android:hint="提交"
        android:onClick="btnSubmit"
        app:layout_constraintStart_toStartOf="@+id/textCarstr"
        app:layout_constraintTop_toBottomOf="@+id/textCarstr" />
</androidx.constraintlayout.widget.ConstraintLayout>