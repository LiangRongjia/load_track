<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <TextView
        android:id="@+id/login"
        android:layout_width="117dp"
        android:layout_height="64dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:text="登录"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.myapplication.FontIconView
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/userbtn"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/user_id"
        app:layout_constraintTop_toTopOf="@+id/user_id" />

    <EditText
        android:id="@+id/user_id"
        android:layout_width="193dp"
        android:layout_height="57dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="236dp"
        android:gravity="center"
        android:hint="用户名"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.myapplication.FontIconView
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:text="@string/passedbtn"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/passwd1"
        app:layout_constraintTop_toTopOf="@+id/passwd1" />

    <EditText
        android:id="@+id/passwd1"
        android:layout_width="193dp"
        android:layout_height="57dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:hint="密码"
        android:inputType="textPassword"
        android:maxLength="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:text="忘记密码"
        app:layout_constraintStart_toEndOf="@+id/passwd1"
        app:layout_constraintTop_toTopOf="@+id/passwd1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="444dp"
        android:onClick="loginbtn"
        android:text="登录"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:text="注册"
        android:onClick="register"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>